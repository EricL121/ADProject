@model ADProject.Models.Group

@{
    ViewData["Title"] = "Details";
}


<link href="~/css/GroupDetails.css" rel="stylesheet" />


<div class="row justify-content-center">
    <div class="col-sm-12">

        <div class="border">
            <div class="display-flex-center">
                <h1>@Model.GroupName</h1>
            </div>

            <div class="row ml-4 mb-4">
                <div class="col-sm">
                    <img class="group-photo" src="@Model.GroupPhoto" alt="group photo" />
                </div>
                <div class="col-sm">
                    <div class="row">
                        <div class="col-sm">
                            <div>@Model.Description</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm">
                            @foreach (var tag in Model.GroupTags)
                            {
                                <span>#</span>@tag.Tag.TagName
                            }
                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <ul>
                        Moderators:
                        @foreach (var mod in Model.UsersGroups)
                        {
                            if (mod.IsMod == true)
                            {
                                <li>@mod.User.UserName</li>
                            }
                        }

                    </ul>
                </div>
            </div>

            @*    <div class="display-flex-end">
                <form id="search-form" method="get">
                    <input type="text" placeholder="Search Featured Recipes.." name="search">
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>*@
        </div>

        @foreach (var recipe in Model.RecipeGroups)
        {
            <div class="row my-4">
                <div class="col-sm">
                    <div class="row mb-2">
                        <div class="col-sm-1">
                            <i style='font-size:50px' class='fa fa-user'></i>
                        </div>
                        <div class="col-sm-11">
                            <div class="row">
                                <div class="col-sm">
                                    <b>@recipe.Recipe.User.UserName</b> posted a recipe
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm">
                                    <h3><b>@recipe.Recipe.Title</b> </h3>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm">
                                    Tags:
                                    @foreach (var tag in recipe.Recipe.RecipeTags)
                                    {
                                        if (tag.IsAllergenTag == false)
                                        {
                                            <span>#</span>@tag.Tag.TagName<span> </span>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm">
                            <img class="recipe-image" src="@recipe.Recipe.MainMediaUrl" alt="recipe main image" />
                        </div>
                        <div class="col-sm">
                            <div class="row">
                                <div class="col-sm">
                                    <h5>Ingredients</h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm">
                                    <p>for @recipe.Recipe.ServingSize serving</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm">
                                    <ul>
                                        @for (int i = 0; i < 3 && i < recipe.Recipe.RecipeIngredients.Count(); i++)
                                        {
                                            <li>@recipe.Recipe.RecipeIngredients[i].Quantity @recipe.Recipe.RecipeIngredients[i].UnitOfMeasurement of @recipe.Recipe.RecipeIngredients[i].Ingredient</li>
                                        }
                                        <li><a asp-controller="Recipes" asp-action="Details" asp-route-gobackurl="Groups/Details/@Model.GroupId" asp-route-id="@recipe.RecipeId">See All</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm">
                                    @foreach (var allergen in recipe.Recipe.RecipeTags)
                                    {
                                        if (allergen.IsAllergenTag == true)
                                        {
                                            <div class="row mb-2">
                                                <div class="col-sm-1">
                                                    <i style='font-size:24px' class='fa fa-exclamation-triangle'></i>
                                                </div>
                                                <div class="col-sm-11">
                                                    Warning: Contains @allergen.Tag.Warning
                                                </div>
                                            </div>
                                            break;
                                        }
                                    }
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm">
                                    Calories: @recipe.Recipe.Calories kcal
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-1">
                                    <i style='font-size:24px' class='fa fa-clock-o mr-3'></i>
                                </div>
                                <div class="col-sm-11">
                                    @recipe.Recipe.DurationInMins minutes
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm">
                                    @if (recipe.Recipe.User.UserName != User.Identity.Name)
                                    {
                                        if (recipe.Recipe.SavedRecipes.Any(sr => sr.User.UserName.Equals(User.Identity.Name) && sr.RecipeId == recipe.RecipeId))
                                        {
                                            <a asp-controller="Recipes" asp-route-gobackurl="Groups/Details/@Model.GroupId" asp-action="RemoveRecipe" asp-route-id="@recipe.RecipeId">Remove Recipe</a>
                                        }
                                        else
                                        {
                                            <a asp-controller="Recipes" asp-route-gobackurl="Groups/Details/@Model.GroupId" asp-action="SaveRecipe" asp-route-id="@recipe.RecipeId">Save Recipe</a>
                                        }
                                    }
                                    else
                                    {
                                        <a asp-controller="Recipes" asp-route-gobackurl="Groups/Details/@Model.GroupId" asp-action="Edit" asp-route-id="@recipe.RecipeId">Edit</a>
                                        <br />
                                        <a asp-controller="Recipes" asp-route-gobackurl="Groups/Details/@Model.GroupId" asp-action="Delete" asp-route-id="@recipe.RecipeId">Delete</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

